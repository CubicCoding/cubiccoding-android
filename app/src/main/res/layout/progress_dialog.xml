<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/progressIcon"
        android:layout_width="@dimen/progress_dialog_icon_size"
        android:layout_height="@dimen/progress_dialog_icon_size"
        android:layout_marginTop="@dimen/progress_dialog_vertical_space"
        android:layout_gravity="center"
        android:src="@drawable/ic_cc_no_bg"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/alertDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/prompt"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginTop="@dimen/progress_dialog_vertical_space"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="@dimen/bottom_splash_header_size"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pullHandle" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/horizontal_progress_width"
        android:layout_height="@dimen/horizontal_progress_height"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:paddingLeft="@dimen/common_edge_space"
        android:paddingRight="@dimen/common_edge_space"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/alertDialogError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/prompt"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="@dimen/progress_dialog_vertical_space"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/error_red"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pullHandle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/progress_dialog_vertical_space"/>

</LinearLayout>